{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": [
      "es2017",
      "dom",
      "WebWorker",
      "DOM.Iterable"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "es2017",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "types": [
      "@types/node",
      "@types/webpack-env",
      "@types/jasmine"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "typings.d.ts",
    "node_modules/timezone-support/dist/*"
  ],
}